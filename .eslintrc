{
  "parser": "@babel/eslint-parser",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": false
    },
    "sourceType": "module"
  },
  "globals": {
    "window": true,
    "strapi": true
  },
  "rules": {
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "no-undef": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
